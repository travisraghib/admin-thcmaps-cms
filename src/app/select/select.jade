.container.login-page
    .row.mt-40
        .col-xs-offset-3.col-xs-6
            .row
                .col-xs-12
                    h3.text-center Select a business
                    hr
                    button.close(type='button' ng-click='select.addBusiness()') Add a business
            .row
                .col-xs-12
                    .row.mb-10(ng-repeat='vendor in select.vendorList')
                        hr
                        .col-xs-4
                            a(ui-sref='main({id : vendor._id})') {{vendor.name || "New"}}
                        .col-xs-4 {{vendor._type}}
                        .col-xs-4
                            button.close.small(type='button' ng-click='select.deleteBusiness(vendor._id)') delete
